{
  "$schema": "http://json.schemastore.org/template",
  "author": "LiuliuSoft",
  "classifications": [ "Web", "OSharp" ],
  "name": "OSharp Template",
  "identity": "OSharp.Template.WebApi",
  "groupIdentity": "OSharp.Template.WebApi",
  "shortName": "osharp",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "OSharp.Template",
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "description": "The target framework for the project",
      "datatype": "choice",
      "replaces": "$(FrameworkVersion)",
      "defaultValue": "net6.0",
      "choices": [
        {
          "choice": "net6.0",
          "description": "Target .Net 6.0"
        },
        {
          "choice": "net5.0",
          "description": "Target .Net 5.0"
        },
        {
          "choice": "netcoreapp3.1",
          "description": "Target .NetCoreApp 3.1"
        }
      ]
    },
    "DatabaseType": {
      "type": "parameter",
      "description": "the type of database, eq: SqlServer/MySql/Sqlite",
      "datatype": "choice",
      "replaces": "SqlServer",
      "defaultValue": "SqlServer",
      "choices": [
        {
          "choice": "SqlServer",
          "description": "SqlServer"
        },
        {
          "choice": "MySql",
          "description": "MySql"
        },
        {
          "choice": "Sqlite",
          "description": "Sqlite"
        },
        {
          "choice": "PostgreSql",
          "description": "PostgreSql"
        },
        {
          "choice": "Oracle",
          "description": "Oracle"
        }
      ]
    },
    "Net60OrGreater": {
      "type": "computed",
      "value": "(Framework == \"net6.0\")"
    },
    "Net50OrGreater": {
      "type": "computed",
      "value": "(Framework == \"net6.0\") || (Framework == \"net5.0\")"
    }
  }
}